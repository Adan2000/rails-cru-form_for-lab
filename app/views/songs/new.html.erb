<h3> New Song Form <h3>

<%= form_for(@song) do |f| %>
    
    <label> Song name </label><br>
    <%= f.text_area :name %><br>

    <label> Song artist </label><br>
    <%= f.text_area :artist_id %><br>

    <label> Song genre </label><br>
    <%= f.text_area :genre_id %><br>

    <%= f.submit %> 

<% end %> 